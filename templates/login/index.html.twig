{% extends 'base.html.twig' %}
{% block title %}CryptoWise - Login{% endblock %}
{% block body %}
<div class="container container-fluid card w-25 h-50 p-5 mt-5">
<h3 class="text-center">Login</h3>
    <form action="{{ path('login') }}" method="post">
	<div class="form-group">
	
		<div class="form-floating mb-3">
			<label for="username" class="form-label mt-4">Email:</label>
			<input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}"/>
		</div>
    
	
		<div class="form-floating" >
			<label for="password">Password:</label>
			<input class="form-control" type="password" id="password" name="_password"/>
		</div>
		<div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
        <label class="form-check-label" for="flexCheckDefault">Remember me?</label>
      </div>

        <input type="hidden" name="_target_path" value="/"/>
        <button class="btn btn-primary mt-3 text-center w-100" type="submit">Login</button>
	</div>		
    </form>
</div>
{% endblock %}
