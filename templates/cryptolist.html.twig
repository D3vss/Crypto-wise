{% extends "base.html.twig" %}
{% block title %}CryptoWise - Home
{% endblock %}



{% block body %}

<div class="container">
<h3 class="mt-5">Checkout the latest Crypto Prices:</h3>
<table class="mt-5 table table-hover">
  <thead>
    <tr class="table-success">
      <th scope="col">Icon</th>
      <th scope="col">Coin</th>
      <th scope="col">Price</th>
      <th scope="col">Market Cap</th>
      <th scope="col">24h Volume</th>
    </tr>
  </thead>
  <tbody>
  {% for i in 0..99 %}
    <tr>

      <th scope="row"><img src={{content[i].image}} height="24" /></th>
      <td>{{content[i].name}}</td>
      <td>${{content[i].current_price}}</td>
      <td>${{content[i].market_cap}}</td>
      <td>${{content[i].market_cap_change_24h}}</td>
    </tr>
  {% endfor %}
  </tbody>
</table>

</div>
{% endblock %}