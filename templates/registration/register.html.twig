{% extends 'base.html.twig' %}

{% block title %}CryptoWise - Register{% endblock %}

{% block body %}
<div class="container container-fluid card w-25 h-50 p-5 mt-5">
<h3 class="text-center">Register</h3>
     {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username) }}
        {{form_row(registrationForm.email)}}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        <button class="btn btn-primary mt-3 text-center w-100" type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
